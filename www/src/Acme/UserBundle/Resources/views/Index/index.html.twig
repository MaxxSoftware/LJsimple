{% extends 'AcmeIndexBundle::base.html.twig' %}
{% block body %}
<div class="fl-l w30">
  <img src="{{ asset('bundles/ljsimple/img/main/ic_login_error.png') }}" width="32" height="32" alt="нет аватарки" />
</div>
<div class="fl-l w70">
<p class="profile_string">
  <span class="profile_field">
    Ф.И.О.:
  </span>
  <span class="profile_field_value">
    {{ name }}
  </span>
</p>
<p class="profile_string">
  <span class="profile_field">
    Логин:
  </span>
  <span class="profile_field_value">
    {{ login }}
  </span>
</p>
<p class="profile_string">
  <span class="profile_field">
    Email:
  </span>
  <span class="profile_field_value">
    {{ email }}
  </span>
</p>
<p class="profile_string">
  <span class="profile_field">
    Количество созданных тем:
  </span>
  <span class="profile_field_value">
    {{ num_post }}
  </span>
</p>
{% if num_post > 0 %}
<p class="profile_string">
  <span class="profile_field">
    Название последней созданного сообщения:
  </span>
  <span class="profile_field_value">
    {{ last_post }}
  </span>
</p>
{% endif %}
</div>
<div class="cl-b"></div>
{% endblock %}